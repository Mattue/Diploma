<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mattue.arduinoconnect.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btOn"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:enabled="false"
        android:onClick="onClickOn"
        android:text="ON"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintBottom_toTopOf="@+id/btOff"
        app:layout_constraintTop_toBottomOf="@+id/tvRead"
        app:layout_constraintVertical_bias="0.384" />

    <Button
        android:id="@+id/btOff"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:enabled="false"
        android:onClick="onClickOff"
        android:text="OFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btOn"
        app:layout_constraintHorizontal_bias="0.085" />

    <TextView
        android:id="@+id/tvRead"
        android:layout_width="355dp"
        android:layout_height="214dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btOff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/bt_left"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="58dp"
        android:enabled="false"
        android:onClick="onClickLeft"
        android:text="left"
        app:layout_constraintLeft_toRightOf="@+id/btOn"
        app:layout_constraintTop_toBottomOf="@+id/tvRead" />

    <Button
        android:id="@+id/bt_right"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="33dp"
        android:enabled="false"
        android:onClick="onClickRight"
        android:text="right"
        app:layout_constraintLeft_toRightOf="@+id/btOff"
        app:layout_constraintTop_toBottomOf="@+id/bt_left" />

    <Button
        android:id="@+id/btStraight"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:onClick="onClickStraight"
        android:text="straight"
        app:layout_constraintLeft_toRightOf="@+id/btOff"
        app:layout_constraintTop_toBottomOf="@+id/bt_right" />

</android.support.constraint.ConstraintLayout>
